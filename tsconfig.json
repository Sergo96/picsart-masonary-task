{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declarationDir": "./types",
    "outDir": "./dist",
    "incremental": true,  // Set this to true
    "module": "esnext",
    "target": "esnext",
    "strict": true,
  },
  "include": [
    "src/**/*",
    "src/**/*.test.tsx"
  ]
}
